.copy-clipboard
  border none
  background none
  position relative
  display inline-block
  input
   position absolute
   border none
   height 10px
   width 10px
   z-index -1
   bottom 0
   right 0

.copy-clipboard-area
  z-index 1
  border none
  outline none
  cursor pointer
  min-width 10px
  min-height 10px
  padding-left 5px
  background none
  text-align center
